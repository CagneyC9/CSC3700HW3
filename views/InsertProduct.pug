include layouts/layoutBS
.container
    h1.mt-3
    div.mt-3
        h1 Insert a new product
    div.mt-2
        form(action='/Products' method='post')
            .form-group
                label(for='itemName' style='color:black') Name
                input.form-control(type='text' aria-describedby='emailHelp' id='ItemName' name='name')
            br
            .form-group
                label(for='itemPrice' style='color:black') Price
                input.form-control(type="number" step="0.01" aria-describedby='emailHelp' id='ItemPrice' name='price')
            br
            button(type='submit' style='background-color: #8497b0') Submit